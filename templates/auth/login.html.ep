% layout 'default';
% title 'Login';
<h2>Login</h2>
<form method="post">
<div>
  Email address:
  <input type="text" name="username" />
</div>
<div>
  Password:
  <input type="password" name="password" />
</div>
<div><%= link_to 'Forgot your password?' => '/password/forgot' %></div>
% if( flash('return_to_url') ) {
<input type="hidden" name="return_to_url"
       value="<%= flash('return_to_url') %>" />
% }
<input type="submit" />
</form>
