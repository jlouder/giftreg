% layout 'default';
% title 'Login';
<h2>Login</h2>
% if( stash('error_message') ) {
<div class="error_message"><%= stash('error_message') %></div>
% }
<form method="post">
<div>
  Email address:
  <input type="text" name="username" />
</div>
<div>
  Password:
  <input type="password" name="password" />
</div>
<div><%= link_to 'Forgot your password?' => '/password/forgot' %></div>
<input type="submit" />
</form>
