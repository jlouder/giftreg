<!DOCTYPE html>
<html>
<head>
<title><%= title %></title>
<link rel="stylesheet" href="/include/styles.css" type="text/css" />
</head>
<body>
<div id="header">
<div id="left">
<%= link_to 'Browse Gift Lists' => '/' %>
</div>
<div id="right">
% if( $self->user_exists ) {
Welcome, <%= $self->user->email_address %>!
<a href="<%= url_for '/logout' %>">Logout</a>
% } else {
<%= link_to 'Login' => '/login' %>
% }
</div>
<div id="middle">
<%= link_to 'Edit Your List' => '/user/edit' %>
</div>
</div>
% if( my $error_message = flash('error_message') || stash('error_message') ) {
<div style="background-image: url('<%= url_for '/images/icon_error.png' %>');"
     class="error_message"><%= $error_message %></div>
% }
% if( flash('message') ) {
<div style="background-image: url('<%= url_for '/images/icon_success.png' %>');"
     class="message"><%= flash('message') %></div>
% }
<div id="content">
<%= content %>
</div>
</body>
</html>
